program factorial_calculator
  implicit none
  integer :: i, n
  integer :: factorial = 1

  ! Get input from user
  write(*,*) "Enter a number to find its factorial:"
  read(*,*) n

  ! Calculate factorial
  do i = 1, n
     factorial = factorial * i
  end do

  ! Display result
  write(*,*) "The factorial of ", n, " is ", factorial

end program factorial_calculator
